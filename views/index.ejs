<!DOCTYPE html>
<html lang="tr" class="font-montserrat">
    <head>
        <%- include('./section/head') -%>
    </head>
    <body class="bg-white flex flex-col text-black dark:text-white dark:bg-[#1f0418] select-none overflow-y overflow-x-hidden transition easy-in-out duration-300">
        <%- include('./section/navbar') -%>
        <div class="flex overflow-hidden pt-16">
            <div class="h-full w-full relative overflow-y-auto overflow-x-hidden px-4">
                <main>
                    <% if (video) { %>
                        <%- include('./pages/video.ejs') -%>
                    <% } %>
                    <% if (audio) { %>
                        <%- include('./pages/audio.ejs') -%>
                    <% } %>
                    <% if (videos) { %>
                        <%- include('./pages/videos.ejs') -%>
                    <% } %>
                    <% if (!video && !videos && !audio) { %>
                        <%- include('./pages/home.ejs') -%>
                    <% } %>
                    <%- include('./section/footer') -%>
                </main>
            </div>
        </div>
        <%- include('./section/system') -%>
    </body>
</html>